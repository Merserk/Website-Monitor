{
  "manifest_version": 3,
  "name": "Website Monitor",
  "version": "1.0",
  "description": "Monitor web pages for changes.",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "pages/popup.html",
    "default_title": "Website Monitor"
  },
  "permissions": [
    "storage",
    "alarms",
    "tabs",
    "scripting",
    "notifications",
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "js/background.js"
  }
}